<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_common_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_15"
    android:paddingTop="@dimen/spacing_15"
    android:paddingRight="@dimen/spacing_15"
    android:paddingBottom="@dimen/spacing_15">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片选择"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/camera_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_40"
        android:layout_marginTop="@dimen/spacing_10"
        android:gravity="center_vertical"
        android:text="相机"
        android:textColor="#999999"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/album_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_40"
        android:layout_marginTop="@dimen/spacing_10"
        android:gravity="center_vertical"
        android:text="相册"
        android:textColor="#999999"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>